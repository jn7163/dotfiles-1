# Files and directories
music_directory		"/mnt/Media/Music/flac"
playlist_directory	"/home/danny/.mpd/playlists"
db_file			"/home/danny/.mpd/mpd.db"
log_file		"/home/danny/.mpd/mpd.log"
#error_file		"/home/danny/.mpd/mpd.error"
pid_file		"/home/danny/.mpd/mpd.pid"
state_file		"/home/danny/.mpd/mpd.state"
# General music daemon options
user			"danny"
#group			"nogroup"
group			"danny"
bind_to_address		"localhost"
bind_to_address		"/home/danny/.mpd/mpd.socket"
port			"6600"
auto_update		"no"
metadata_to_use        "artist,title,name"
