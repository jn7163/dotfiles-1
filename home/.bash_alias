#
# ~/.bash_alias
#

alias ssh='ssh -C'
alias httping='httping -S -K -Y -s -Z -X'

case `uname` in
    Darwin)
        alias ls='ls -G'
        alias netstat='netstat -anp'
        ;;
    Linux)
        alias ls='ls --color=auto'
        alias grep='grep --color=auto'
        alias netstat='netstat -antpu'
        alias less='less -R'
        alias route='route -n'
        alias ip='ip -h -c -f inet -4 -s'
        ;;
esac
