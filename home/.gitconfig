[core]
    legacyheaders = false
    quotepath = false
    pager = less -+$LESS -FRX
    #pager = less -r
[user]
    name = Havanna
    email = skykiss_2000@163.com
[diff]
    tool = diff
[alias]
    ll= log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset' --abbrev-commit --max-count=20
    l = log --stat --abbrev-commit
    # git svn asliases
    si = git si
    sr = git svn rebase
    sp = git svn dcommit
    sf = git svn fetch
[color]
    branch = auto
    diff = auto
    status = auto
    grep = auto
    ui = auto
    interactive = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
